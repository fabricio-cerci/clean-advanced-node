{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "target": "es2021",
    "sourceMap": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs", // transforma o import para require, pois o type: 'module' funciona de maneira "ruim"
    "moduleResolution": "node", // permite import de pastas
    "esModuleInterop": true, // resolver compatibilidade entre modules diferentes (import/require)
    "baseUrl": "src", // Define a rota basica para os paths
    "paths": { // caminhos din√¢micos
      "@/*": ["*"],
      "@/tests/*": ["../tests/*"]
    },
    "strict": true
  },
  "include": ["src"]
}